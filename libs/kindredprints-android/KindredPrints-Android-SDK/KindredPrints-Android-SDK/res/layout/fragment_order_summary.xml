<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/txtTitle"
       	android:layout_width="wrap_content"
       	android:layout_height="@dimen/order_summary_edit_height"
       	android:layout_alignParentTop="true"
       	android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/order_summary_vertical_margin"
        android:layout_marginLeft="@dimen/order_summary_side_margin"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/order_summary_text_size" 
        android:text="@string/order_summary_title"
    />
    
    <Button 
        android:id="@+id/cmdEditOrder"
        android:layout_width="@dimen/order_summary_edit_width"
        android:layout_height="@dimen/order_summary_edit_height"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/order_summary_vertical_margin"
        android:layout_marginRight="@dimen/order_summary_side_margin"
       	android:textSize="@dimen/order_summary_text_size"
        android:text="@string/order_summary_edit"
        android:background="@drawable/cmd_rounded_button"
        />

    <ListView
        android:id="@+id/lvOrderItemList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/order_summary_vertical_margin"
        android:layout_marginLeft="@dimen/order_summary_side_margin"
        android:layout_marginRight="@dimen/order_summary_side_margin"
        android:layout_below="@+id/txtTitle"
        android:scrollbars="none"
        android:divider="#00000000"
        android:descendantFocusability="afterDescendants" >
	    
    </ListView>
</RelativeLayout>
