<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_summary_special_row_height" >
    
    <TextView
        android:id="@+id/txtCardTitle"
       	android:layout_width="wrap_content"
       	android:layout_height="match_parent"
       	android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/order_summary_text_size" 
        android:text="@string/order_summary_payment"
        android:textStyle="bold"
    />
    
    <TextView
        android:id="@+id/txtUserCard"
       	android:layout_width="wrap_content"
       	android:layout_height="match_parent"
       	android:layout_toRightOf="@+id/txtCardTitle"
       	android:layout_marginLeft="@dimen/order_summary_padding"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/order_summary_text_size" 
    />

    <Button 
        android:id="@+id/cmdEditCard"
        android:layout_width="@dimen/order_summary_edit_width"
        android:layout_height="@dimen/order_summary_edit_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
       	android:textSize="@dimen/order_summary_text_size"
        android:text="@string/order_summary_edit"
        android:background="@drawable/cmd_rounded_button"
        />
    
</RelativeLayout>
